@model IEnumerable<Theater>

@{ 
    ViewData["Title"] = "Theater List";
}


<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Picture)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var theater in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@theater.Picture" alt="@theater.Name" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => theater.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => theater.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square">Edit</i></a>
                            <a class="btn btn-outline-info"><i class="bi bi-eye">Details</i></a>
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>